<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goods">



 <select id="goodsRetrieve" resultType="GoodsDTO" parameterType="string">

 </select> 
 <select id="goodsList" resultType="GoodsDTO" parameterType="string">    
  select goods_Code
   		,goods_Color
   		,goods_Name
   		,goods_Price
   		,goods_Brand
   		,goods_Image1
   		,goods_Category
  from goods 
  where goods_Category=#{goods_Category} 
 </select>
 <select id="goodsAll" resultType="GoodsDTO">
 select goods_Code
   		,goods_Color
   		,goods_Name
   		,goods_Price
   		,goods_Brand
   		,goods_Image1
   		<!-- ,goods_Category -->
  from goods  
 </select>
  
	
</mapper>